<AppScreenLayout@MDBoxLayout>:
    orientation: "vertical"
    padding: "16dp", "80dp", "16dp", "16dp"

<AdaptativeVerticalCardLayout@MDBoxLayout>
    adaptive_height: True
    orientation: "vertical"
    padding: dp(8)
    canvas.before:
        Color:
            rgba: app.theme_cls.primary_color
        BoxShadow:
            pos: self.pos
            size: self.size
            offset: 0, -10
            spread_radius: -20, -20
            border_radius: dp(10), dp(10), dp(10), dp(10)
            blur_radius: 20
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [dp(10),]

<AdaptativeLabelBoxRight@MDBoxLayout>:
    adaptive_height: True
    orientation: "horizontal"
    MDBoxLayout:
        size_hint: None, None
        size: 160, 0
    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: True
        MDBoxLayout:
            orientation: "horizontal"
            adaptive_height: True
            size_hint_x: 1
            Widget:
                size_hint_x: 1
            MDRectangleFlatIconButton:
                id: created_at
                icon: "human-greeting-variant"
                text: ""
                line_color: 0, 0, 0, 0
                padding: 0, 0, 0, 0
                on_release: app.copy_text_to_clipboard(label.text)
        AdaptativeVerticalCardLayout:
            MDLabel:
                id: label
                adaptive_height: True
                halign: "right"
                text: ""
                color: app.theme_cls.text_color

<AdaptativeLabelBoxLeft@MDBoxLayout>:
    adaptive_height: True
    orientation: "horizontal"
    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: True
        MDRectangleFlatIconButton:
            id: created_at
            icon: "robot-outline"
            text: ""
            line_color: 0, 0, 0, 0
            padding: 0, 0, 0, 0
            on_release: app.copy_text_to_clipboard(label.text)
        AdaptativeVerticalCardLayout:
            MDLabel:
                id: label
                adaptive_height: True
                text: ""
                halign: "left"
                color: app.theme_cls.text_color
    MDBoxLayout:
        size_hint: None, None
        size: 160, 0

<AdaptativeImageBoxLeft@MDBoxLayout>:
    adaptive_height: True
    orientation: "horizontal"
    MDBoxLayout:
        id: image_box
        orientation: "vertical"
        adaptive_height: True
        MDRectangleFlatIconButton:
            id: created_at
            icon: "robot-outline"
            text: ""
            line_color: 0, 0, 0, 0
            padding: 0, 0, 0, 0
            on_release: app.open_file(generated_image.source)
        Image:
            id: generated_image
            source: ""
            size_hint: None, None
            size: 512, 512
    MDBoxLayout:
        size_hint: None, None
        size: 160, 0

<AnimatedIconButton@MDBoxLayout>:
    orientation: "vertical"
    adaptive_height: True
    padding: 0, 0, 0, 0
    spacing: 0
    MDBoxLayout:
        orientation: "horizontal"
        adaptive_height: True
        spacing: 0
        MDIconButton:
            id: animated_icon
            icon: "robot-outline"
            padding: 0, 0, 0, 0
            icon_size: "16sp"
        MDIconButton:
            id: animated_icon_2
            icon: "robot-confused-outline"
            padding: 0, 0, 0, 0
            icon_size: "16sp"
        MDIconButton:
            id: animated_icon_3
            icon: "robot-confused"
            padding: 0, 0, 0, 0
            icon_size: "16sp"
