<HomeScreen>
    AppScreenLayout:
        ScrollView:
            id: scroll_view
            do_scroll_x: False
            do_scroll_y: True
            always_overscroll: False
            MDBoxLayout:
                orientation: "vertical"
                id: scroll_view_box
                adaptive_height: True
                spacing: dp(4)
                MDRectangleFlatIconButton:
                    id: more_info_button
                    icon: "chat"
                    text: "ChatGPT"
                    on_release: root.navigate_to("ai_chat")
                    pos_hint: {"center_x": 0.5}
                MDRectangleFlatIconButton:
                    id: more_info_button
                    icon: "file-image"
                    text: "Image Generation"
                    on_release: root.navigate_to("ai_chat")
                    pos_hint: {"center_x": 0.5}
